<p id="notice"><%= notice %></p>

<h1>Listing Lunches</h1>

<table>
  <thead>
    <tr>
      <th>Supplier</th>
      <th>Sign up date time</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lunches.each do |lunch| %>
      <tr>
        <td><%= lunch.supplier %></td>
        <td><%= lunch.sign_up_date_time %></td>
        <td><%= lunch.creator %></td>
        <td><%= link_to 'Show', lunch %></td>
        <td><%= link_to 'Edit', edit_lunch_path(lunch) %></td>
        <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

