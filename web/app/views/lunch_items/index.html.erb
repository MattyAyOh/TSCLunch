<p id="notice"><%= notice %></p>

<h1>Listing Lunch Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Vegetarian</th>
      <th>Lunch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lunch_items.each do |lunch_item| %>
      <tr>
        <td><%= lunch_item.name %></td>
        <td><%= lunch_item.vegetarian %></td>
        <td><%= lunch_item.lunch_id %></td>
        <td><%= link_to 'Show', lunch_item %></td>
        <td><%= link_to 'Edit', edit_lunch_item_path(lunch_item) %></td>
        <td><%= link_to 'Destroy', lunch_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

